{
  "ts-node": {
    "ignore": [],
    "include": ["src/**/*"]
  },
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "spec/**/*", "test-app/**/*"],
  "exclude": ["boilerplate", "spec/fixtures/"]
}
