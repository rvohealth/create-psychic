{
  "ts-node": {
    "ignore": [],
    "include": ["src/**/*"]
  },
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["*"]
    }
  },
  "include": ["src", "noop"],
  "exclude": ["./boilerplate/*"]
}
