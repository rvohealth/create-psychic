{
  "ts-node": {
    "ignore": [],
    "include": ["src/**/*"],
    "esm": true
  },
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["*"]
    }
  },
  "include": ["src", "noop"],
  "exclude": ["./boilerplate/*"]
}
